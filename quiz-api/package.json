{
  "name": "quiz-api",
  "version": "1.0.0",
  "description": "An API for Quiz application",
  "author": "Fererra",
  "private": true,
  "license": "MIT",
  "scripts": {
    "copy:assets": "copyfiles -u 2 src/mail/assets/**/* dist/mail/assets",
    "build": "nest build && yarn copy:assets",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:create": "typeorm migration:create",
    "migration:generate": "cross-env NODE_ENV=production yarn typeorm migration:generate -d src/database/dataSource.ts",
    "migration:run": "cross-env NODE_ENV=production yarn typeorm migration:run -d src/database/dataSource.ts",
    "migration:revert": "cross-env NODE_ENV=production yarn typeorm migration:revert -d src/database/dataSource.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.2",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.2",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.2",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/typeorm": "^11.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cloudinary": "^2.6.1",
    "cookie-parser": "^1.4.7",
    "joi": "^17.13.3",
    "module-alias": "^2.2.3",
    "ms": "^2.1.3",
    "multer": "^2.0.0",
    "nodemailer": "^7.0.3",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.24",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.23",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  },
  "_moduleAliases": {
    "@src": "dist",
    "@auth": "dist/auth",
    "@common": "dist/common",
    "@database": "dist/database",
    "@image": "dist/image",
    "@mail": "dist/mail",
    "@review": "dist/review",
    "@storage": "dist/storage",
    "@task": "dist/task",
    "@token": "dist/token",
    "@users": "dist/users",
    "@quiz": "dist/quiz"
  }
}
